<?xml version="1.0" encoding="utf-8"?>
<behaviour>
  <event type="drop" target="modules_generic_rootfolder" 
  		flavour="listitem/component" source="modules_website_topic" actions="move"/>

  <event type="drop" target="modules_website_topic" 
  		flavour="listitem/component" source="modules_lexicon_word" actions="move"/>


  <event type="select contextmenu" target="modules_generic_rootfolder" 
  	actions="-openOrderChildren addTopic | editPermissions -createFolder"/>
  		
  <event type="select contextmenu" target="modules_website_topic" 
  	actions="editPermissions createWord -rename -delete remove" />

  <datasource module="lexicon" components="modules_website/topic"/>
  
  <columns>
    <column ref="label" flex="5" label="Module-name" primary="true" properties="type"/>
  </columns>
</behaviour>
